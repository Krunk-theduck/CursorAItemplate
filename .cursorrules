{
    "rules": {
        "context_initialization": {
            "description": "Starting point for each interaction",
            "steps": [
                "ALWAYS read `.notes/project_overview.md` and `.notes/task_list.md`",
                "Record all learnings and decisions in `.notes/meeting_notes.md`"
            ]
        },
        "operational_protocol": {
            "description": "How to approach tasks",
            "before_action": [
                "Create a MECE task breakdown"
            ],
            "code_changes": [
                "Read relevant code sections before editing",
                "Preserve existing functionality",
                "Maintain type safety"
            ]
        },
        "safety_requirements": [
            "NEVER break type safety",
            "ALWAYS maintain proper error handling",
            "ALWAYS document new code",
            "ALWAYS document learnings in `.notes/meeting_notes.md`"
        ],
        "priorities": [
            {
                "source": ".notes/",
                "weight": 1.0
            }
        ],
        "modes": {
            "base": {
                "description": "For routine website tasks and quick updates",
                "features": {
                    "responseStyle": "concise",
                    "codeFormat": "minimal",
                    "examples": false,
                    "suggestions": false
                },
                "bestFor": [
                    "Content updates",
                    "Simple styling changes",
                    "Basic component modifications",
                    "Quick fixes"
                ]
            },
            "enhanced": {
                "description": "For complex website development problems",
                "features": {
                    "responseStyle": "detailed",
                    "codeFormat": "comprehensive",
                    "examples": true,
                    "suggestions": true
                },
                "bestFor": [
                    "Architecture decisions",
                    "Performance optimization",
                    "Complex feature implementation",
                    "Responsive design solutions"
                ]
            },
            "creative": {
                "description": "For design and brainstorming sessions",
                "features": {
                    "responseStyle": "exploratory",
                    "codeFormat": "prototype",
                    "examples": true,
                    "suggestions": true,
                    "moodboards": true
                },
                "bestFor": [
                    "Color scheme exploration",
                    "Layout ideation",
                    "UI/UX improvements",
                    "Visual component design"
                ]
            },
            "debug": {
                "description": "For troubleshooting and problem solving",
                "features": {
                    "responseStyle": "analytical",
                    "codeFormat": "diagnostic",
                    "examples": true,
                    "suggestions": true,
                    "errorAnalysis": true
                },
                "bestFor": [
                    "Bug fixing",
                    "Performance issues",
                    "Cross-browser compatibility",
                    "Build problems"
                ]
            }
        },
        "defaultMode": "base",
        "switchingRules": {
            "allowDynamicSwitch": true,
            "persistencePerSession": true
        },
        "project_directives": {
            "name": "my_project",
            "ai_first": true,
            "documentation": {
                "learnings_path": ".notes/meeting_notes.md",
                "auto_document": true
            }
        }
    }
}